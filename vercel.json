{
  "builds": [
    { "src": "api/app.py", "use": "@vercel/python" },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/app.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{.next,*.cache,node_modules,public,app}/2**"
    }
  }

}
